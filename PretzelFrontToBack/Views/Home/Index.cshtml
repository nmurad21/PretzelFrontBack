@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<!-- Start Main  -->
<main>
    <!-- Start Slider -->
    <section id="slider">
        <div id="carouselExampleFade" class="carousel slide carousel-fade col-lg-12 col-md-12" data-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.sliders.Count(); i++)
                {
                    if (i == 0)
                    {

                        <div class="carousel-item active">
                            <img src="~/assets/images/@Model.sliders.ElementAt(i).ImageUrl" class="d-block w-100" alt="...">
                            <div class="text-img">
                                <img src="~/assets/images/h5-revolution-text-img-1.png" alt="">
                            </div>
                        </div>
                    }
                    else
                    {

                        <div class="carousel-item">
                            <img src="~/assets/images/@Model.sliders.ElementAt(i).ImageUrl" class="d-block w-100" alt="...">
                            <div class="text-img">
                                <img src="~/assets/images/home-5-slide-1-graphic-1a.png" alt="">
                            </div>
                        </div>
                    }
                }

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>
    <!-- End Slider -->
    <!-- Start Delicious -->
    <section id="delicious">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <div class="title">
                        <h3>@Model.deliciousTitle.Title</h3>
                    </div>
                    <div class="sub-title">
                        <p>
                            @Html.Raw(Model.deliciousTitle.SubTitle)
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.deliciousCards)
                {

                    <div class="col-lg-4 col-md-6 col-sm-12 cards">
                        <div class="card" style="width: 18rem;">
                            <img src="~/assets/images/@item.CardImage" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.CardTitle</h5>
                                <p class="card-text">@item.CardDesc</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </section>
    <!-- End Delicious -->
    <!-- Start Statistic -->
    <section id="statistic">
        <div class="title-statistic">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-sm-12 first-text-statistic">
                        <div class="first-marketing">
                            <span>Marketing</span>
                            <div class="first-statistic">
                            </div>
                        </div>
                        <div class="photography">
                            <span>Photography</span>
                            <div class="first-statistic">
                            </div>
                        </div>
                        <div class="second-marketing">
                            <span>Marketing</span>
                            <div class="first-statistic">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-12 second-text-statistic">
                        <span>
                            @Model.statistic.Title
                        </span>
                        <p>
                            @Model.statistic.Desc
                        </p>
                        <button type="button">
                            Read More
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Statistic -->
    <!-- Start Romance -->
    <section id="romance">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="romance-text">
                        <span>@Model.romanceTitle.Title</span>
                        <p>@Model.romanceTitle.SubTitle</p>
                    </div>
                </div>
            </div>
            <div class="row romance-products">
                <div class="row first-products">
                    @foreach (var item in Model.romanceCards)
                    {
                        <div class="col-3">
                            <div class="card" style="width: 18rem;">
                                <img src="~/assets/images/@item.CardImage" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@item.CardTitle</h5>
                                    <p class="card-text">@item.CardDesc</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End Romance -->
</main>
<!-- End Main  -->
