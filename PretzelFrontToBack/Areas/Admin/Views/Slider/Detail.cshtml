@model Slider
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image Name</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr>
                                    <td>@Model.ImageUrl</td>
                                    <td>
                                        <img src="~/assets/images/@Model.ImageUrl" />
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    <a class="btn btn-dark" asp-controller="Slider" asp-action="Index">Back</a>

